    "node": ">=18.18.0"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "awilix": "^12.0.0",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "node-fetch": "^3.3.2",
    "pino": "^9.3.2",
    "pino-http": "^9.0.0",
    "pino-pretty": "^11.2.2",
    "redis": "^5.8.2",
