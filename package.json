{
  "name": "tg-bot-telegraph",
  "version": "5.0.0",
  "description": "Telegraf.js cats bot with web panel",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "smoke": "node scripts/smoke.js",
    "prisma:check": "node scripts/check-prisma.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev --name init",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:reset": "prisma migrate reset --force",
    "prisma:studio": "prisma studio",
    "build:css": "tailwindcss -c tailwind.config.js -i ./src/web/styles/input.css -o ./src/web/public/css/tw.css --minify",
    "dev:css": "tailwindcss -c tailwind.config.js -i ./src/web/styles/input.css -o ./src/web/public/css/tw.css --watch"
